@model Ecommerce_Application.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
</head>
<body>
    <section class="vh-100" style="background-color: #FFF7DD;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem; background-color: #B4DEBD">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="https://plus.unsplash.com/premium_photo-1683746792239-6ce8cdd3ac78?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTN8fGVjb21tZXJjZXxlbnwwfDF8MHx8fDA%3D"
                                     alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    @using (Html.BeginForm("Login", "User", FormMethod.Post))
                                    {
                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <span class="h1 fw-bold mb-0">ClickBuy</span>
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                                        <div data-mdb-input-init class="form-outline mb-4">
                                            @Html.TextBoxFor(m => m.email, new { @class = "form-control form-control-lg", type = "email" })
                                            <label class="form-label" for="form2Example17">Email</label>
                                            @Html.ValidationMessageFor(m => m.email, "", new { @style = "color: red;" })
                                        </div>

                                        <div data-mdb-input-init class="form-outline mb-4">
                                            @Html.TextBoxFor(m => m.password, new { @class = "form-control form-control-lg", type = "password" })
                                            <label class="form-label" for="form2Example27">Password</label>
                                            @Html.ValidationMessageFor(m => m.password, "", new { @style = "color: red;" })
                                        </div>

                                        <div class="pt-1 mb-4">
                                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
                                        </div>
                                    }
                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        Don't have an account? @Html.ActionLink("Register Now", "Register", "User", null, new { @style = "color: #393f81" })
                                    </p>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    @if (ViewBag.result != null)
    {
        <div class="toast-container position-fixed bottom-0 end-0 p-3">
            <div class="toast show bg-danger text-white">
                <div class="toast-header">
                    <strong class="me-auto">Login Failed</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
                </div>
                <div class="toast-body">
                    Invalid User Credentials
                </div>
            </div>
        </div>
    }
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>
</html>

