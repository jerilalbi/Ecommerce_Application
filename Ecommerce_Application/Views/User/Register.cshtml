@model Ecommerce_Application.Models.RegisterModel

@{
    ViewBag.Title = "Register";
    ViewBag.MaxDate = DateTime.Now.ToString("yyyy-MM-dd");
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <style>
        .card-image-wrapper {
            max-height: 650px;
            overflow: hidden;
        }

            .card-image-wrapper img {
                height: 100%;
                object-fit: cover;
            }
    </style>
</head>
<body>
    <section class="vh-100" style="background-color: #FFF7DD">
        <div class="container py-3 h-100">
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col">
                    <div class="card card-registration my-2" style="background-color: #B4DEBD">
                        <div class="row g-0">
                            <div class="col-xl-6 d-none d-xl-block">
                                <div class="card-image-wrapper">
                                    <img src="https://plus.unsplash.com/premium_photo-1683758344017-61aec4a1d2d3?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MjV8fGVjb21tZXJjZXxlbnwwfDF8MHx8fDA%3D"
                                         alt="Sample photo" class="img-fluid"
                                         style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
                                </div>
                            </div>
                            <div class="col-xl-6">
                                @using (Html.BeginForm("Register", "User", FormMethod.Post))
                                {
                                    <div class="card-body p-md-3 text-black">
                                        <h3 class="mb-5 text-uppercase">Register New Account</h3>

                                        <div class="row">
                                            <div class="col-md-6 mb-4">
                                                <div data-mdb-input-init class="form-outline">
                                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-lg" })
                                                    <label class="form-label" for="form3Example1m">Name</label>
                                                    @Html.ValidationMessageFor(m => m.Name, "", new { @style = "color: red;" })
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-4">
                                                <div data-mdb-input-init class="form-outline">
                                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", type = "email" })
                                                    <label class="form-label" for="form3Example1n">Email</label>
                                                    @Html.ValidationMessageFor(m => m.Email, "", new { @style = "color: red;" })
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6 mb-4">
                                                <div data-mdb-input-init class="form-outline">
                                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg" })
                                                    <label class="form-label" for="form3Example1m1">Password</label>
                                                    @Html.ValidationMessageFor(m => m.Password, "", new { @style = "color: red;" })
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <div data-mdb-input-init class="form-outline">
                                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-lg" })
                                                    <label class="form-label" for="form3Example1n1">Confirm Password</label>
                                                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @style = "color: red;" })
                                                </div>
                                            </div>
                                        </div>

                                        <div class="d-md-flex justify-content-start align-items-center mb-3 py-2">

                                            <h6 class="mb-0 me-4">Gender: </h6>
                                            @Html.ValidationMessageFor(m => m.Gender, "", new { @style = "color: red;" })

                                            <div class="form-check form-check-inline mb-0 me-4">
                                                <label class="form-check-label" for="femaleGender"> @Html.RadioButtonFor(m => m.Gender, "Female") Female</label>
                                            </div>

                                            <div class="form-check form-check-inline mb-0 me-4">
                                                <label class="form-check-label" for="maleGender"> @Html.RadioButtonFor(m => m.Gender, "Male") Male</label>
                                            </div>
                                        </div>

                                        <div data-mdb-input-init class="form-outline mb-3">
                                            @Html.TextBoxFor(m => m.Dob, new { @class = "form-control form-control-lg", type = "date", max = @ViewBag.MaxDate })
                                            <label class="form-label" for="form3Example9">Date Of Birth</label>
                                            @Html.ValidationMessageFor(m => m.Dob, "", new { @style = "color: red;" })
                                        </div>

                                        <div data-mdb-input-init class="form-outline mb-3">
                                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control form-control-lg", type = "text" })
                                            <label class="form-label" for="form3Example90">Phone Number</label>
                                            @Html.ValidationMessageFor(m => m.Phone, "", new { @style = "color: red;" })
                                        </div>

                                        <div class="d-flex justify-content-end pt-2">
                                            <button type="submit" name="action" value="login" class="btn btn-light btn-lg">Back To Login</button>
                                            <button type="submit" name="action" value="register" class="btn btn-lg ms-2" style="background-color: #80A1BA; color: white; font-weight: bold">Register</button>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @if (ViewBag.UserRegistered != null)
    {
        <div class="toast-container position-fixed bottom-0 end-0 p-3">
            <div class="toast show bg-@(ViewBag.UserRegistered == "success" ? "success" : "danger") text-white">
                <div class="toast-header">
                    <strong class="me-auto">@(ViewBag.UserRegistered?.ToString().ToUpper())</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
                </div>
                <div class="toast-body">
                    @ViewBag.Message
                </div>
            </div>
        </div>
    }

    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
